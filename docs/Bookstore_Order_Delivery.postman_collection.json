{
	"info": {
		"_postman_id": "order-on-delivery-workflow",
		"name": "Bookstore Order on Delivery Workflow",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Login",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"your_password\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/auth/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"auth",
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "2. Add Book to Cart",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"book_id\": \"book_uuid_here\",\n    \"quantity\": 2\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/cart/add",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"cart",
						"add"
					]
				}
			},
			"response": []
		},
		{
			"name": "3. Create Order (On Delivery)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"payment_method\": \"order_on_delivery\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/orders/create",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"orders",
						"create"
					]
				}
			},
			"response": []
		},
		{
			"name": "4. Process Order (On Delivery)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"order_id\": 123\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/orders/process-payment",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"orders",
						"process-payment"
					]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5000"
		},
		{
			"key": "jwt_token",
			"value": ""
		}
	]
}
